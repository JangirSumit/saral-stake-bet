{
  "manifest_version": 3,
  "name": "Saral Stake Bet",
  "version": "1.0",
  "description": "Track your betting stakes and manage your gambling activities",
  "permissions": ["storage", "sidePanel", "activeTab"],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_title": "Open Side Panel",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]
}