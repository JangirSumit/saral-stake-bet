<Window x:Class="CrashAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crash Game Analyzer" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#0F172A"
        Icon="icon.ico">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Settings -->
        <Border Grid.Column="0" Background="#0F172A" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    

                    
                    <!-- Basic Configuration -->
                    <TextBlock Text="ðŸ’° Basic Configuration" Foreground="#22C55E" FontWeight="Bold" 
                               FontSize="12" Margin="0,5,0,5"/>
                    
                    <StackPanel Margin="0,0,0,8">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                <TextBlock Text="Bet Amount" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtBetAmount" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                <TextBlock Text="Cashout At" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtCashoutAt" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                <TextBlock Text="On Loss (%)" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtOnLoss" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                <TextBlock Text="On Win (%)" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtOnWin" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Stop Betting Rules -->
                    <TextBlock Text="ðŸ›‘ Stop Betting Rules" Foreground="#22C55E" FontWeight="Bold" 
                               FontSize="12" Margin="0,0,0,5"/>
                    
                    <StackPanel Margin="0,0,0,8">
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                <TextBlock Text="Crash At" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtCrashAt" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                <TextBlock Text="Times" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtCrashTimes" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Resume Betting Rules -->
                    <TextBlock Text="ðŸ”„ Resume Betting Rules" Foreground="#22C55E" FontWeight="Bold" 
                               FontSize="12" Margin="0,0,0,5"/>
                    
                    <StackPanel Margin="0,0,0,8">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                <TextBlock Text="Resume At" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtResumeAt" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                <TextBlock Text="Adjust Bet (%)" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtResumeAdjust" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                <TextBlock Text="Resume Below At" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtResumeBelowAt" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                <TextBlock Text="Below Times" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtResumeBelowTimes" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Reset Rules -->
                    <TextBlock Text="ðŸ”„ Reset Rules" Foreground="#22C55E" FontWeight="Bold" 
                               FontSize="12" Margin="0,0,0,5"/>
                    
                    <StackPanel Margin="0,0,0,8">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                <TextBlock Text="If Changes (%)" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtResetThreshold" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                <TextBlock Text="If Profit (x times)" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtProfitTimes" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                        </Grid>
                        
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="If Loss Amount" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtLossResetAmount" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Wallet Protection & Display Settings -->
                    <TextBlock Text="ðŸ›¡ï¸ Wallet Protection &amp; Display" Foreground="#22C55E" FontWeight="Bold" 
                               FontSize="12" Margin="0,0,0,5"/>
                    
                    <StackPanel Margin="0,0,0,8">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,4,0">
                                <TextBlock Text="Stop if Wallet Down (%)" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtWalletStopLoss" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="4,0,0,0">
                                <TextBlock Text="Decimal Places (0-5)" Foreground="#94A3B8" FontSize="10" Margin="0,0,0,3"/>
                                <TextBox Name="txtDecimalPlaces" Background="#1E293B" Foreground="White" BorderBrush="#22C55E" Padding="6" Height="30" TextChanged="OnConfigChanged"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Load Log Button -->
                    <Button Name="btnLoadLog" Content="ðŸ“ Load Log File" Height="35" Margin="0,5,0,5"
                            Background="#22C55E" Foreground="White" BorderThickness="0"
                            Click="BtnLoadLog_Click"/>
                    
                    <!-- Analyze Button -->
                    <Button Name="btnAnalyze" Content="âš¡ Analyze" Height="35" Margin="0,5,0,10"
                            Background="#FBBF24" Foreground="Black" BorderThickness="0"
                            Click="BtnAnalyze_Click"/>
                    

                    
                    <!-- Export Button -->
                    <Button Name="btnExport" Content="ðŸ’¾ Export CSV" Height="35"
                            Background="#6B7280" Foreground="White" BorderThickness="0"
                            Click="BtnExport_Click"/>
                    
                    <!-- Color Legends -->
                    <TextBlock Text="ðŸŽ¨ Color Legends" Foreground="#22C55E" FontWeight="Bold" 
                               FontSize="12" Margin="0,20,0,10"/>
                    
                    <StackPanel Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Border Background="#065F46" Width="15" Height="15" CornerRadius="2" Margin="0,0,8,0"/>
                            <TextBlock Text="Won" Foreground="#94A3B8" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Border Background="#7F1D1D" Width="15" Height="15" CornerRadius="2" Margin="0,0,8,0"/>
                            <TextBlock Text="Lost" Foreground="#94A3B8" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <Border Background="#92400E" Width="15" Height="15" CornerRadius="2" Margin="0,0,8,0"/>
                            <TextBlock Text="Skipped" Foreground="#94A3B8" FontSize="10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Right Panel - Settings Snapshot and Two Grids Side by Side -->
        <Border Grid.Column="1" Background="#1E293B" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Settings Snapshot Row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Log File Settings -->
                    <Border Grid.Column="0" Background="#374151" CornerRadius="5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="ðŸ“„ Log File Settings" Foreground="#22C55E" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Name="txtLogSettings" Text="No log loaded" Foreground="#94A3B8" FontSize="10" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Current Analysis Settings -->
                    <Border Grid.Column="2" Background="#374151" CornerRadius="5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="âš¡ Current Analysis Settings" Foreground="#FBBF24" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock Name="txtCurrentSettings" Text="Configure settings and analyze" Foreground="#94A3B8" FontSize="10" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Data Grids Row -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Original Data Grid -->
                <Border Grid.Column="0" Background="#1E293B">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="ðŸ“Š Original Log Data" Foreground="#22C55E" FontWeight="Bold" 
                                   FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <Border Background="#22C55E" Padding="4,2" CornerRadius="3" Margin="0,0,3,0">
                                <TextBlock Name="txtOriginalMaxProfit" Text="Total: $0.00" Foreground="White" FontSize="9" FontWeight="Bold"/>
                            </Border>
                            <Border Background="#3B82F6" Padding="4,2" CornerRadius="3" Margin="3,0,3,0">
                                <TextBlock Name="txtOriginalMaxLoss" Text="Bets: 0" Foreground="White" FontSize="9" FontWeight="Bold"/>
                            </Border>
                            <Border Background="#F59E0B" Padding="4,2" CornerRadius="3" Margin="3,0,3,0">
                                <TextBlock Name="txtOriginalMaxSingle" Text="Max Profit: $0.00" Foreground="White" FontSize="9" FontWeight="Bold"/>
                            </Border>
                            <Border Background="#EF4444" Padding="4,2" CornerRadius="3" Margin="3,0,3,0">
                                <TextBlock Name="txtOriginalLoss" Text="Max Loss: $0.00" Foreground="White" FontSize="9" FontWeight="Bold"/>
                            </Border>
                            <Border Background="#8B5CF6" Padding="4,2" CornerRadius="3" Margin="3,0,0,0">
                                <TextBlock Name="txtOriginalSkipped" Text="Skipped: 0" Foreground="White" FontSize="9" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                        <DataGrid Grid.Row="2" Name="dgvOriginal" 
                                  Background="#1E293B" 
                                  Foreground="White"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  SelectionChanged="DgvOriginal_SelectionChanged"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False"
                                  CanUserSortColumns="False"
                                  FontSize="12"
                                  RowHeight="30"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            
                            <DataGrid.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#475569"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#475569"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
                            </DataGrid.Resources>
                            
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="No" Binding="{Binding No}" Width="40"/>
                                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="70"/>
                                <DataGridTextColumn Header="Crash" Binding="{Binding Crash}" Width="70"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="70"/>
                                <DataGridTextColumn Header="Bet Amount" Binding="{Binding BetAmount}" Width="90"/>
                                <DataGridTextColumn Header="Profit" Binding="{Binding Profit}" Width="90"/>
                            </DataGrid.Columns>
                            
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#374151"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="BorderBrush" Value="#4B5563"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,4"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.CellStyle>
                            
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="#1E293B"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding No}" Value="NET">
                                            <Setter Property="Background" Value="#374151"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="BorderBrush" Value="#22C55E"/>
                                            <Setter Property="BorderThickness" Value="0,2,0,0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Won">
                                            <Setter Property="Background" Value="#065F46"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Lost">
                                            <Setter Property="Background" Value="#7F1D1D"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="No Bet">
                                            <Setter Property="Background" Value="#4B5563"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Skipped">
                                            <Setter Property="Background" Value="#92400E"/>
                                        </DataTrigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#475569"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>
                    </Grid>
                </Border>
                
                    <!-- New Analyzed Data Grid -->
                    <Border Grid.Column="2" Background="#1E293B">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="âš¡ New Analysis Data" Foreground="#FBBF24" FontWeight="Bold" 
                                       FontSize="14" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <Border Background="#22C55E" Padding="4,2" CornerRadius="3" Margin="0,0,3,0">
                                    <TextBlock Name="txtAnalyzedMaxProfit" Text="Total: $0.00" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                </Border>
                                <Border Background="#3B82F6" Padding="4,2" CornerRadius="3" Margin="3,0,3,0">
                                    <TextBlock Name="txtAnalyzedMaxLoss" Text="Bets: 0" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                </Border>
                                <Border Background="#F59E0B" Padding="4,2" CornerRadius="3" Margin="3,0,3,0">
                                    <TextBlock Name="txtAnalyzedMaxSingle" Text="Max Profit: $0.00" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                </Border>
                                <Border Background="#EF4444" Padding="4,2" CornerRadius="3" Margin="3,0,3,0">
                                    <TextBlock Name="txtAnalyzedLoss" Text="Max Loss: $0.00" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                </Border>
                                <Border Background="#8B5CF6" Padding="4,2" CornerRadius="3" Margin="3,0,0,0">
                                    <TextBlock Name="txtAnalyzedSkipped" Text="Skipped: 0" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <DataGrid Grid.Row="2" Name="dgvAnalyzed" 
                                  Background="#1E293B" 
                                  Foreground="White"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  SelectionChanged="DgvAnalyzed_SelectionChanged"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeRows="False"
                                  CanUserSortColumns="False"
                                  FontSize="12"
                                  RowHeight="30"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            
                            <DataGrid.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#475569"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#475569"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
                            </DataGrid.Resources>
                            
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="No" Binding="{Binding No}" Width="40"/>
                                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="70"/>
                                <DataGridTextColumn Header="Crash" Binding="{Binding Crash}" Width="70"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="70"/>
                                <DataGridTextColumn Header="Bet Amount" Binding="{Binding BetAmount}" Width="90"/>
                                <DataGridTextColumn Header="Profit" Binding="{Binding Profit}" Width="90"/>
                            </DataGrid.Columns>
                            
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#374151"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="BorderBrush" Value="#4B5563"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,4"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.CellStyle>
                            
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="#1E293B"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding No}" Value="NET">
                                            <Setter Property="Background" Value="#374151"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="BorderBrush" Value="#FBBF24"/>
                                            <Setter Property="BorderThickness" Value="0,2,0,0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Won">
                                            <Setter Property="Background" Value="#065F46"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Lost">
                                            <Setter Property="Background" Value="#7F1D1D"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Skipped">
                                            <Setter Property="Background" Value="#92400E"/>
                                        </DataTrigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#475569"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
        
    </Grid>
</Window>